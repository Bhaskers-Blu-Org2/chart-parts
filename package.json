{
	"name": "@gog/parent",
	"private": true,
	"scripts": {
		"clean": "lerna run clean",
		"build": "lerna run build --stream",
		"start:packages": "lerna run start --parallel --stream",
		"lint": "tslint \"packages/{client,examples,renderers,processing,util}/*/src/**/*.ts*\"",
		"unit_test": "jest --coverage",
		"test": "run-s lint build unit_test",
		"lerna:publish": "lerna --registry https://msrp-essex.pkgs.visualstudio.com/_packaging/essex-npm/npm/registry/ publish",
		"release": "run-s clean build lerna:publish",
		"start": "run-s build start:packages"
	},
	"devDependencies": {
		"@types/jest": "^22.2.3",
		"husky": "^0.14.3",
		"jest": "^22.4.4",
		"jest-html": "^1.4.0",
		"lerna": "^2.11.0",
		"lint-staged": "^7.1.2",
		"npm-run-all": "^4.1.3",
		"prettier": "^1.13.4",
		"ts-jest": "^22.4.6",
		"tslint": "^5.10.0",
		"tslint-config-prettier": "^1.13.0",
		"tslint-react": "^3.6.0",
		"tslint-react-perf": "^0.2.1",
		"typescript": "2.9.1"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"useTabs": true
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"tslint --fix",
			"prettier --write",
			"git add"
		]
	},
	"workspaces": {
		"packages": [
			"packages/examples/*",
			"packages/renderers/*",
			"packages/processing/*",
			"packages/client/*",
			"packages/util/*"
		],
		"nohoist": [
			"**/@types/*",
			"**/@types/*/**",
			"**/@types/react-native",
			"**/@types/react-native/**",
			"**/@types/react-dom",
			"**/@types/react-dom/**",
			"**/react-native",
			"**/react-native/**",
			"**/react-native-svg",
			"**/react-native-svg/**",
			"**/react-dom",
			"**/react-dom/**",
			"@gog/examples-mobile/**",
			"@gog/react-svg-renderer",
			"@gog/react-svg-renderer/**",
			"@gog/react-native-svg-renderer",
			"@gog/react-native-svg-renderer/**",
			"**/@gog/react-native-svg-renderer/**",
			"@gog/examples-web/**"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testMatch": [
			"**/__tests__/**/*.spec.ts(x|)"
		],
		"collectCoverageFrom": [
			"**/src/*.{ts,tsx}",
			"**/src/**/*.{ts,tsx}",
			"!packages/examples/testdata/**",
			"!**/__tests__/**"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/lib/"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
    	"snapshotSerializers": ["jest-html"]
	}
}
