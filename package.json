{
	"name": "@chart-parts/parent",
	"private": true,
	"scripts": {
		"clean": "lerna run clean",
		"build": "run-s build:libs build:docs",
		"build:libs": "lerna run build --stream",
		"build:docs": "lerna run build:docs --scope @chart-parts/documentation --stream",
		"start:packages": "lerna run start --parallel --stream",
		"test:packages": "lerna run test --stream",
		"release:packages": "lerna run release --stream",
		"lint": "lerna run lint --parallel --stream",
		"unit_test": "jest --coverage",
		"test": "run-s lint build unit_test test:packages",
		"lerna:publish": "lerna --registry https://msrp-essex.pkgs.visualstudio.com/_packaging/essex-npm/npm/registry/ publish",
		"release": "run-s clean build lerna:publish release:packages",
		"start": "run-s build start:packages"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^7.2.0",
		"@commitlint/config-conventional": "^7.1.2",
		"@types/jest": "^23.3.1",
		"husky": "^1.1.1",
		"jest": "^23.6.0",
		"jest-html": "^1.4.0",
		"lerna": "^3.4.1",
		"lint-staged": "^7.3.0",
		"npm-run-all": "^4.1.3",
		"prettier": "^1.14.2",
		"rxjs": "^6.3.3",
		"ts-jest": "^23.1.4",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.14.0",
		"tslint-react": "^3.6.0",
		"typescript": "^3.1.3"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"useTabs": true
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"tslint --fix",
			"prettier --write",
			"git add"
		]
	},
	"workspaces": {
		"packages": [
			"packages/documentation",
			"packages/examples/testdata",
			"packages/examples/web",
			"packages/renderers/*",
			"packages/processing/*",
			"packages/client/*",
			"packages/util/*"
		],
		"nohoist": [
			"**"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testMatch": [
			"**/__tests__/**/*.spec.ts(x|)"
		],
		"collectCoverageFrom": [
			"**/src/*.{ts,tsx}",
			"**/src/**/*.{ts,tsx}",
			"!**/src/**/*.d.ts",
			"!packages/examples/testdata/**",
			"!packages/documentation/**",
			"!**/__tests__/**"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/lib/"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"snapshotSerializers": [
			"jest-html"
		]
	},
	"resolutions": {
		"**/@types/react": "16.4.10"
	}
}
