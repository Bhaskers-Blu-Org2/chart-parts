{
	"compilerOptions": {
		"target": "es2015",
		// Using es2015 here screws up testing. We'll have to revisit this
		// to turn on tree-shaking
		"module": "commonjs",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"jsx": "react",
		"strict": true,
		"noUnusedLocals": true,
		"lib": ["esnext"]
	}
}
